
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
    int count = 0;
}

<form method="get" asp-action="Sendbox" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Konuya göre ara..." value="@ViewBag.search" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Ara</button>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Alıcı Email</th>
        <th>Konu</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ReceiverEmail</td>
            <td>@item.Subject</td>
            <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-warning">Mesajı Aç</a></td>
        </tr>
    }
</table>